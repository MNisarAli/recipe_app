<section class="new_recipe">
  <h2 class='main-heading'>Create New Recipe</h2>
  <%= link_to 'Back to Recipes', recipes_path, class: 'btn btn-back' %>

  <section class="add_new_form">
    <article class="form_container">
      <%= form_with model: @recipe do |form| %>
        <div class="form_group">
          <%= form.label :name, class: "form_label"%>
          <%= form.text_field :name, class: "form_input" %>
        </div>

        <div class="form_group">
          <%= form.label :preparation_time, class: "form_label" %>
          <%= form.number_field :preparation_time, class: "form_input" %>
        </div>

        <div class="form_group">
          <%= form.label :cooking_time, class: "form_label" %>
          <%= form.number_field :cooking_time, class: "form_input" %>
        </div>

        <div class="form_group">
          <%= form.label :description, class: "form_label" %>
          <%= form.text_area :description, class: "form_input" %>
        </div>

        <div class="form_group">
          <%= form.label :public, class: "form_label" %>
          <%= form.select :public, options_for_select([[ 'Yes', true ], [ 'No', false ]]), class: "form_input" %>
        </div>

        <div class="form-group">
          <%= form.submit class: "btn create-recipe-btn" %>
        </div>
      <% end %>
    </article>
  </section>
</section>
