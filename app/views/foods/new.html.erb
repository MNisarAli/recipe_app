<section class="new_food">
  <h2 class='main-heading'>Create a New Food</h2>
  <%= link_to 'Back to Foods', foods_path, class: 'btn btn-back' %>
  <section class="add_new_form">
    <article class="form_container">
      <%= form_with model: @food do |form| %>
        <div class="form_group">
          <%= form.label :name, class: "form_label" %>
          <%= form.text_field :name, class: "form_input" %>
        </div>

        <div class="form_group">
          <%= form.label :measurement_unit, class: "form_label" %>
          <%= form.text_field :measurement_unit, class: "form_input" %>
        </div>

        <div class="form_group">
          <span><%= form.label :price, class: "form_label" %>($)</span>
          <%= form.number_field :price, class: "form_input", value: number_to_currency(form.object.price) %>
        </div>

        <div class="form_group">
          <%= form.label :quantity, class: "form_label" %>
          <%= form.number_field :quantity, class: "form_input" %>
        </div>

        <%= form.submit class: "btn create-food-btn" %>
      <% end %>
    </article>
  </section>
</section>
