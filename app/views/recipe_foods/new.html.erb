<section class="main-wrapper add_new_ingredient">
  <h2 class='main-heading'>Add Ingredient</h2>

  <div class="form_container">
    <%= form_with model: @recipe_food, url: recipe_recipe_foods_path(params[:recipe_id]), method: :post, local: true do |form| %>
      <div class="form_group">
        <%= form.label :food_id, lass: "form_label" %>
        <%= form.select :food_id, current_user.foods.all.map { |food| [food.name, food.id] }, {}, class: "form_input" %>
      </div>

      <div class="form_group">
        <%= form.label :quantity, lass: "form_label" %>
        <%= form.number_field :quantity, class: "form_input" %>
      </div>

      <%= form.submit "Add", class: "btn add-food-btn" %>
    <% end %>
  </div>
</section>
